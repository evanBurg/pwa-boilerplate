{
  "name": "Blu Messaging",
  "short_name": "Messages",
  "scope": "https://evanburg.github.io/pwa-boilerplate/",
  "start_url": "/",
  "display": "fullscreen",
  "orientation": "portrait",
  "background_color": "#aac8d4",
  "theme_color": "#75929D",
  "icons": [
    {
      "src": "assets/images/icon.png",
      "type": "image/png",
      "sizes": "512x512 192x192 64x64 32x32 24x24 16x16"
    },
    {
      "src": "assets/images/maskable_icon.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable"
    }
  ],
  "share_target": {
    "action": "/sharing",
    "params": {
      "title": "title",
      "text": "text",
      "url": "url"
    }
  },
  "shortcuts": [
    {
      "name": "Open Messages",
      "short_name": "Messages",
      "description": "Open the app to your messages",
      "url": "/messages",
      "icons": [{ "src": "assets/images/messages.png", "sizes": "192x192" }]
    },
    {
      "name": "Open Settings",
      "short_name": "Settings",
      "description": "Open the app to the settings",
      "url": "/settings",
      "icons": [{ "src": "assets/images/settings.png", "sizes": "192x192" }]
    }
  ]
}